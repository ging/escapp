<script>
	$(function(){
	  let updateScore = function(){
		let newScore = 0;
		$(".scoreInput").each(function(i, e){
		  newScore += parseFloat(e.value || 0);
		});
		$("#totalScore").text(newScore + "%");
	  }
	  let scoreInput = $('.scoreInput');
	  scoreInput.on("keyup", updateScore);
	  scoreInput.on("change", updateScore);
	});
</script>