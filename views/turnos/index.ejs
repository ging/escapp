
<div class="flexBoxTurnos">
<% for (var i in turnos) {
 	var turn = turnos[i];
	var date = new Date(turn.date);
	var dateNoTime = new Date(turn.date);
	dateNoTime.setHours(0,0,0,0);
	%> 
		<div class="turno <%= turn.date ? '' : 'always' %>" data-date="<%=getDashDate(dateNoTime)%>">
			<div class="hora">
				<%- turn.date ? formatTime(date) : `<span class="always">${i18n.turnos.always}</span>` %>
			</div>
			<div class="indications">
				<% if (turn.indications) { %>
					<%= turn.indications %> <br/>
				<% } else { %> 
					<em class="no-indications"><%=i18n.turnos.noIndications%></em>
				<% } %>
			</div>
			<form method="POST" action="/escapeRooms/<%= escapeRoom.id %>/turnos/<%=turn.id%>?_method=DELETE">
        		<button type="submit" class="little-button less" title="<%=i18n.escapeRoom.steps.turnos.deleteTitle%>" >
        			<i class="material-icons">delete</i>
        		</button>
        	</form>
		</div>
<%}%>
<% include ./new %>
</div>

